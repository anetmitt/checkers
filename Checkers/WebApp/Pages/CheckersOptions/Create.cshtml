@page
@model WebApp.Pages_CheckersOptions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Game Options</h1>

<hr />
<div class="row">
    <div class="col-md-4 info-table">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckersOptions.Name" class="control-label"></label>
                <input asp-for="CheckersOptions.Name" class="form-control" />
                <span asp-validation-for="CheckersOptions.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersOptions.Width" class="control-label"></label>
                <input asp-for="CheckersOptions.Width" class="form-control" />
                <span asp-validation-for="CheckersOptions.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersOptions.Height" class="control-label"></label>
                <input asp-for="CheckersOptions.Height" class="form-control" />
                <span asp-validation-for="CheckersOptions.Height" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CheckersOptions.WhiteStarts" /> @Html.DisplayNameFor(model => model.CheckersOptions.WhiteStarts)
                </label>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="button-19" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
